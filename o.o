var hideGames = false;

texter = "";




window.onload=()=>{

  let inp=document.querySelector('.search');

  inp.oninput=()=>{

    let val=inp.value;
    val=val.trim();
    val=val.toLowerCase();

    let list=document.querySelectorAll('.sear');


    if (val != '') {

      list.forEach(elem=>{

        if(elem.innerText.toLowerCase().search(val)==-1) {

          elem.classList.add('hide');

        }});

        console.info(val);   

    }else{

          list.forEach(elem=>{

            elem.classList.remove('hide');

          });

    }

  };

};
